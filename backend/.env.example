# ============================================
# INSTAGRAM AUTOMATION - BACKEND CONFIGURATION
# ============================================

# DATABASE
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/instagram_automation?retryWrites=true&w=majority
MONGODB_DB_NAME=instagram_automation

# INSTAGRAM META API
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id
INSTAGRAM_ACCESS_TOKEN=your_meta_access_token
INSTAGRAM_APP_ID=your_meta_app_id
INSTAGRAM_APP_SECRET=your_meta_app_secret
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# JWT AUTHENTICATION
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SERVER CONFIGURATION
DEBUG=True
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENVIRONMENT=development

# CORS
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# SECURITY
CORS_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# TIMEZONE
TIMEZONE=Asia/Kolkata